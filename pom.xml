<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <name>springboot :: Examples</name>

    <groupId>cn.liuyiyou</groupId>
    <artifactId>cn.liuyiyou.springboot</artifactId>
    <version>1.0-SNAPSHOT</version>
    <packaging>pom</packaging>

    <modules>

        <module>springboot-common</module>
        <!-- 基础 – 入门篇 -->
        <!-- Spring Boot 之 HelloWorld 详解 -->
        <module>ch01-hello</module>
        <!--异常以及默认错误处理-->
        <module>ch02-exception</module>
        <module>ch02-spring-boot-common</module>
        <!--Spring Boot值配置-->
        <module>ch03-configuration</module>
        <!-- Spring Boot 整合 Mybatis 的完整 Web 案例 -->
        <!-- Spring Boot 之配置文件详解 -->
        <module>ch04-properties</module>
        <module>ch04-mybatis</module>
        <!-- Spring Boot 整合 Mybatis Annotation 注解案例 -->
        <module>ch05-mybatis-annotation</module>
        <!-- Spring Boot 整合 Mybatis Annotation 注解案例 -->
        <module>ch06-redis-default</module>
        <!--Spring Boot atomocis-->
        <module>ch07-jdbc-atomikos</module>
        <module>ch08-aspect</module>
        <module>ch09-spring-boot-jooq</module>
        <module>ch10-spring-boot-securing</module>
        <module>ch11-spring-boot-securing-login</module>

        <!-- 基础 - Web 业务开发篇 -->
        <!-- Spring Boot 实现 Restful 服务，基于 HTTP / JSON 传输 -->
        <module>springboot-restful</module>
        <!-- Spring Boot 集成 FreeMarker -->
        <module>springboot-freemarker</module>
        <!-- Spring Boot HTTP over JSON 的错误码异常处理 -->
        <module>springboot-validation-over-json</module>
        <!-- Spring Boot 整合 Mybatis 实现 Druid 多数据源配置 -->
        <module>springboot-mybatis-mutil-datasource</module>
